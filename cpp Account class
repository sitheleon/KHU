#include <iostream>
using namespace std;

class Account {
private:

	string id;
	string name;
	int balance;
	

public:
	//생성자
	static int left_bal;

	Account();

	Account(const string& id,  const string& name, int balance);

	//소멸자
	~Account();

	//맴버함수
	void setArr(string _id, string _name, int _balance);
	string getId() const;
	string getName() const;
	int getBalance() const;

	void print_total();



};

int Account::left_bal = 0;

Account::Account() : id(","), name("."), balance(0)
{}

Account::Account(const string& stu_id, const string& stu_name, int stu_balance):
	id(stu_id),  name(stu_name),  balance(stu_balance)
{}


void Account::setArr(string _id, string _name, int _balance) {
	this->name = _name;
	this->id = _id;
	this->balance = _balance;
}

Account::~Account() {

	left_bal += balance;
}

string Account::getId()const {
	return id;
}


string Account::getName()const {
	return name;
}


int Account::getBalance()const {
	return balance;
	left_bal += balance;
}

void Account::print_total() {

	cout << "회수된 금액" << left_bal;
}



int main() {
	Account* acc_arr = new Account[3];
	cout << "총 학생 수 입력: 3" << endl;
	string m_id;
	string m_name;
	int m_balance;

	for (int i = 0; i < 3; i++) {
		cout << i + 1 << "번째 학생 계좌 입력 : 학번: ";
		cin >> m_id;
		
		int is_dup = 0;
		for (int j = 0; j < i; j++) {
			if (m_id == acc_arr[j].getId()) {
				is_dup++;

			}

		}

		cout << endl;
		cout << "이름 : ";
		cin >> m_name;
		cout << endl;
		cout << "잔액 : ";
		cin >> m_balance;

		acc_arr[i].setArr(m_id, m_name, m_balance);



		cout << "==================================" << endl;



		if (is_dup) {
			cout << "중복된 학번입니다. 프로그램을 종료합니다.";
			break;
		}
	}

		delete[] acc_arr;
		
		cout << "회수된 금액" << Account::left_bal;
}








